<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:padding="5dp"
    android:layoutDirection="ltr"
    android:gravity="center"
    android:visibility="visible"
    tools:visibility="visible">
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layoutDirection="ltr"
    android:gravity="center"
    android:visibility="visible"
    tools:visibility="visible">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/textView7"
            style="@style/Widget.AppCompat.TextView.SpinnerItem"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingTop="10dp"
            android:background="@color/blue"
            android:scrollIndicators="top"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textAlignment="center"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/textView5"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="27dp"
        android:gravity="top"
        android:textStyle="bold"
        android:text="@string/create_account"
        android:textColor="@color/blue"
        android:textSize="35sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="500dp"
            android:layout_height="70dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:gravity="top"
            android:text="@string/not_have_account"
            android:textSize="19sp" />
    </LinearLayout>
    <EditText
        android:id="@+id/editTextTextEmailAddress3"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:ems="20"
        android:background="@drawable/style_of_edit_text"
        android:hint="Name"
        android:inputType="text"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="191dp"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="15dp" />
    <EditText
        android:id="@+id/editTextTextEmailAddress2"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:ems="20"
        android:hint="E-Mail"
        android:inputType="textEmailAddress"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/style_of_edit_text" />
    <EditText
        android:id="@+id/editTextTextEmailAddress4"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:ems="20"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/style_of_edit_text" />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_marginLeft="360dp"
        android:layout_marginTop="350dp"
        android:contentDescription="@string/eye"
        android:src="@drawable/eye" />
    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="15dp"
        android:hint="Re-Password"
        android:background="@drawable/style_of_edit_text" />

    <Button
        android:id="@+id/button2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="@string/create"
        android:background="@drawable/style_of_button"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="480dp"
        android:textColor="@color/white"
        android:textSize="19sp"
        />

    <TextView
        android:id="@+id/textView6"
        android:text="@string/have_account_before"
        android:layout_width="400dp"
        android:layout_height="90dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="560dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18dp"/>


    <TextView
        android:id="@+id/text2"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="562dp"
        android:onClick="text_login"
        android:text="@string/login2"
        android:textColor="@color/blue"
        android:textStyle="bold" />
</FrameLayout>
</FrameLayout>